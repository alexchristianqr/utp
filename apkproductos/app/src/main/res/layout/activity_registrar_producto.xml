<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/registrar_producto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="40dp"
                android:background="@android:color/white">

                <ImageButton
                    android:id="@+id/btnBack3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="Regresar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/left_arrow" />

                <TextView
                    android:id="@+id/txtTitulo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRAR PRODUCTO"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnBack3"
                    android:layout_marginTop="8dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitulo2">

                    <ImageView
                        android:id="@+id/imgProductoFoto"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="4dp"
                        android:background="@drawable/circle_background_light"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:clipToOutline="true"
                        tools:src="@tools:sample/backgrounds/scenic"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        app:tint="@android:color/white"
                        app:backgroundTint="#7A4A9C"
                        app:layout_constraintBottom_toBottomOf="@+id/imgProductoFoto"
                        app:layout_constraintEnd_toEndOf="@+id/imgProductoFoto"
                        app:srcCompat="@drawable/ic_camera"
                        android:layout_marginBottom="-8dp"
                        android:layout_marginEnd="-8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/txtProductoNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/edit_text_simple_border"
                    android:hint="Nombre del Producto"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="textCapWords"
                    app:layout_constraintTop_toBottomOf="@+id/imageContainer" />

                <EditText
                    android:id="@+id/txtProductoDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_simple_border"
                    android:hint="Descripción del Producto"
                    android:padding="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    app:layout_constraintTop_toBottomOf="@+id/txtProductoNombre" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dataContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtProductoDescripcion">

                    <EditText
                        android:id="@+id/txtProductoStock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/edit_text_simple_border"
                        android:hint="Stock Inicial"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/txtProductoPrecio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/txtProductoPrecio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/edit_text_simple_border"
                        android:hint="Precio"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/txtProductoStock"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="177dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="81dp" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="txtProductoStock,txtProductoPrecio" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/barrier">
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tvCategoriaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Categoría"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dataContainer" />

                <Spinner
                    android:id="@+id/spProductoCategoria"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/spinner_bottom_line"
                    app:layout_constraintTop_toBottomOf="@+id/tvCategoriaLabel" />

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="40dp"
                    android:text="GUARDAR"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#7A4A9C"
                    app:cornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/spProductoCategoria" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>